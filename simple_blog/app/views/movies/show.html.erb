<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class="col-md-4">
				<%= link_to image_tag @movie.image.url(:medium) %>
				<div class="table-responsive">
					<table class="table">
						<tbody>
							<tr>
								<td><strong>Title:</strong></td>
								<td> <%= @movie.title %></td>
							</tr>
							<tr>
							 <td> <strong>Category:</strong></td>
                             <td> <%= @movie.category %></td>	
							</tr>
							<tr>
								<td> <strong>Relaesd year:</strong></td>
                                <td> <%= @movie.released_year %></td>
							</tr>
							<tr>
								 <td> <strong>Price:</strong></td>
                                 <td> <%= @movie.price %></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>





